{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["dist", "tests", "src/futures", "node_modules"]
}
